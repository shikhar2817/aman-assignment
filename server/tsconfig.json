{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "target": "es5",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        // "rootDir": "src",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "__tests__"],
    "exclude": ["node_modules", "build/**/*"]
}
